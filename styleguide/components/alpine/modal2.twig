<div
  x-data="{ open: false }">
  <!-- Button -->
  <button @click="open = true" type="button" class="focus:outline-none focus:ring-4 focus:ring-aqua-400 px-4 py-2 bg-white border border-black">
    Open dialog
    <span x-text="open"></span>
  </button>

  <!-- Modal -->
  <template x-teleport="body">
    <div
      x-show="open" @keydown.escape.prevent.stop="open = false" role="dialog" aria-modal="true" x-id="['modal-title']" :aria-labelledby="$id('modal-title')" class="fixed inset-0">
      <!-- Overlay -->
      <div x-show="open" x-transition.opacity class="fixed inset-0 bg-black bg-opacity-50"></div>
      <!-- Panel -->
      <div x-show="open" x-transition @click="open = false" class="relative flex items-center justify-center w-full h-full">
        <div
          @click.stop x-trap.noscroll.inert="open" style="max-height: 80vh" class="w-full max-w-2xl p-8 overflow-y-auto bg-white border border-black">
          <!-- Title -->
          <h2 class="text-3xl font-medium" :id="$id('modal-title')">Confirm</h2>
          <!-- Content -->
          <p class="mt-2 text-gray-600">Are you sure you want to learn how to create an awesome modal?</p>
          <!-- Buttons -->
          <div class="flex mt-8 space-x-2">
            <button class="focus:outline-none focus:ring-4 focus:ring-aqua-400 px-4 py-2 bg-white border border-black">
              Confirm
            </button>
            <button class="focus:outline-none focus:ring-4 focus:ring-aqua-400 px-4 py-2 bg-white border border-black">
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>
  </template>
</div>
