            <div class="block mt-4">
                <span class="form-label">Block</span>
                <div class="{{ customInputTextCss }}">
                    <div>
                        <label class="inline-flex items-center">
                            <input type="checkbox" class="form-checkbox" />
                            <span class="ml-2">Option unchecked</span>
                        </label>
                    </div>
                    <div>
                        <label class="inline-flex items-center">
                            <input type="checkbox" class="form-checkbox" checked />
                            <span class="ml-2">Option checked</span>
                        </label>
                    </div>
                    <div>
                        <label class="inline-flex items-center">
                            <input type="checkbox" class="form-checkbox" disabled />
                            <span class="ml-2">Option disabled</span>
                        </label>
                    </div>
                    <div>
                        <label class="inline-flex items-center">
                            <input type="checkbox" class="form-checkbox" checked disabled />
