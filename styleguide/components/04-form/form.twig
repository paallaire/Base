{% set customInputTextCss = 'mt-2 block w-full' %}

<div class="p-5">
    <div class="flex flex-wrap -mx-5">
        <div class="w-1/2 px-5">
            <h2 class="o-heading-5">Input text</h2>

            <label for="" class="block mt-4">
                <span class="form-label">Normal</span>
                <input type="text" class="form-input | {{ customInputTextCss }}" value="Value" placeholder="" />
            </label>

            <label for="" class="block mt-4">
                <span class="form-label">Placeholder</span>
                <input
                    type="text"
                    class="form-input | {{ customInputTextCss }}"
                    placeholder="Value"
                    placeholder="Suscipit corporis optio"
                />
            </label>

            <label for="" class="block mt-4 | form-input-error">
                <span class="form-label">Error</span>
                <input type="text" class="form-input | {{ customInputTextCss }}" value="Possimus ullam" />
            </label>

            <label for="" class="block mt-4">
                <span class="form-label">Disabled</span>
                <input type="text" class="form-input | {{ customInputTextCss }}" disabled value="Lorem ipsum dolor" />
            </label>

            <h2 class="o-heading-5 | mt-8">Textarea</h2>

            <label for="" class="block mt-4">
                <span class="form-label">Normal</span>
                <textarea type="text" class="form-textarea | {{ customInputTextCss }}">Lorem ipsum dolor</textarea>
            </label>

            <label for="" class="block mt-4">
                <span class="form-label">Placeholder</span>
                <textarea
                    type="text"
                    class="form-textarea | {{ customInputTextCss }}"
                    placeholder="Lorem ipsum dolor"
                ></textarea>
            </label>

            <label for="" class="block mt-4 | form-input-error">
                <span class="form-label">Error</span>
                <textarea type="text" class="form-textarea | {{ customInputTextCss }}">Lorem ipsum dolor</textarea>
            </label>

            <label for="" class="block mt-4">
                <span class="form-label">Disabled</span>
                <textarea type="text" class="form-textarea | {{ customInputTextCss }}" disabled>
Lorem ipsum dolor</textarea
                >
            </label>
        </div>

        <div class="w-1/2 px-5">
            <h2 class="o-heading-5">Select</h2>

            <label class="block mt-4">
                <span class="form-label">Normal</span>
                <select class="form-select | {{ customInputTextCss }}">
                    <option>$1,000</option>
                    <option>$5,000</option>
                    <option>$10,000</option>
                    <option>$25,000</option>
                </select>
            </label>

            <label class="form-input-error | block mt-4">
                <span class="form-label">Normal</span>
                <select class="form-select | {{ customInputTextCss }}">
                    <option>$1,000</option>
                    <option>$5,000</option>
                    <option>$10,000</option>
                    <option>$25,000</option>
                </select>
            </label>

            <label class="block mt-4">
                <span class="form-label">Disabled</span>
                <select class="form-select | {{ customInputTextCss }}" disabled>
                    <option>$1,000</option>
                    <option>$5,000</option>
                    <option>$10,000</option>
                    <option>$25,000</option>
                </select>
            </label>

            <h2 class="o-heading-5 | mt-8">Select Multiple</h2>

            <label class="block mt-4">
                <span class="form-label">Normal</span>
                <select class="form-multiselect | {{ customInputTextCss }}" multiple>
                    <option>$1,000</option>
                    <option>$5,000</option>
                    <option>$10,000</option>
                    <option>$25,000</option>
                </select>
            </label>

            <label class="form-input-error | block mt-4">
                <span class="form-label">Error</span>
                <select class="form-multiselect | {{ customInputTextCss }}" multiple>
                    <option>$1,000</option>
                    <option>$5,000</option>
                    <option>$10,000</option>
                    <option>$25,000</option>
                </select>
            </label>

            <label class="block mt-4">
                <span class="form-label">Disabled</span>
                <select class="form-multiselect | {{ customInputTextCss }}" multiple disabled>
                    <option>$1,000</option>
                    <option>$5,000</option>
                    <option>$10,000</option>
                    <option>$25,000</option>
                </select>
            </label>
        </div>

        <div class="w-1/2 px-5 mt-8">
