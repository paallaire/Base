    Condition navCssClass
============================================================================ #}
{% if isInsideProductionSolutionLanding %}

	{% set navCssClass = 'u-h-24' %}

{% elseif entry.type|default == 'productsSolutionsLanding' or isBu %}

	{% set navCssClass = 'u-h-24 | xl:u-h-12' %}

{% elseif isInsideSectionAbout %}

	{% set navCssClass = 'xl:u-h-22' %}

{% endif %}
