{# layout.twig #}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <title>{{ title }}</title>
    <link href="/dist/styles/styleguide.css" rel="stylesheet">
    <link href="/dist/styles/main.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.typekit.net/zzn8shy.css">
    
</head>

<body>
    <div id="app">

        {% block page %}{% endblock %}

        {% set pages = [
            { 'name' :  'General', 'url' : '' },
            { 'name' :  'Colors', 'url' : 'colors.html' },
            { 'name' :  'Elements', 'url' : 'elements.html' },
            { 'name' :  'Typography', 'url' : 'typography.html' },
            { 'name' :  'Elements', 'url' : 'elements.html' },
            { 'name' :  'Wysiwyg article', 'url' : 'wysiwyg-article.html' },
        ] %}

        {% set pagesElements = [] %}

        {% set pagesComponents = [
            { 'name' :  'reveal', 'url' : 'reveal.html' },
            { 'name' :  'Page Headline', 'url' : 'page-headline.html' },
            { 'name' :  'Related article', 'url' : 'entry.html' },
            { 'name' :  'Service article', 'url' : 'service.html' }
        ] %}

        {% set pagesLayout = [
            { 'name' :  'Header', 'url' : 'header.html' },
            { 'name' :  'Footer', 'url' : 'footer.html' },
        ] %}

        <button id="nav-mobile" @click="showNavMobile = true">Menu</button>

        <nav-mobile :show="showNavMobile" @nav-mobile-close="closeNavMobile">
            <div slot="header"><span class="vue-nav-mobile__title">Styleguide</span></div>
            <div slot="nav">
                
                <div class="vue-nav-mobile__section-title">Base</div>
                <ul class="vue-nav-mobile__section-list">
                    {% for page in pages %}
                    <li><a href="/styleguide/{{ page.url }}">{{ page.name }}</a></li>
                    {% endfor %}
                </ul>

                <div class="vue-nav-mobile__section-title">Elements</div>
                <ul class="vue-nav-mobile__section-list">
                    {% for page in pagesElements %}
                    <li><a href="/styleguide/elements/{{ page.url }}">{{ page.name }}</a></li>
                    {% endfor %}
                </ul>

                <div class="vue-nav-mobile__section-title">Components</div>
                <ul class="vue-nav-mobile__section-list">
                    {% for page in pagesComponents %}
                    <li><a href="/styleguide/components/{{ page.url }}">{{ page.name }}</a></li>
                    {% endfor %}
                </ul>

                <div class="vue-nav-mobile__section-title">Layout</div>
                <ul class="vue-nav-mobile__section-list">
                    {% for page in pagesLayout %}
                    <li><a href="/styleguide/layout/{{ page.url }}">{{ page.name }}</a></li>
                    {% endfor %}
                </ul>

            </div>
        </nav-mobile>

    </div>
    <script src="/dist/scripts/styleguide.js"></script>
</body>

</html>
