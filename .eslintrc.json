{
    "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "rules": {
        "func-names": "warn",
        "linebreak-style": ["error", "unix"],
        "indent": ["error", 4],
        "no-param-reassign": 0,
        "no-unused-vars": "warn",
        "prettier/prettier": "error",
        "max-len": [
            "warn",
            {
                "code": 120,
                "ignoreComments": true
            }
        ]
    },
    "globals": {
        "window": true,
        "document": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
}
