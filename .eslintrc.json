{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {},
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "@components",
                        "./assets/scripts/components",
                    ],
                    [
                        "@debug",
                        "./assets/scripts/debug"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".vue"
                ]
            }
        }
    }
}
