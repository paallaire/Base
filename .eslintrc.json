{
    "extends": ["airbnb-base", "prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "env": {
        "browser": true,
        "jquery": true
    },
    "globals": {
        "window": true,
        "document": true
    },
    "plugins": ["prettier"],
    "rules": {
        "func-names": "warn",
        "linebreak-style": ["error", "unix"],
        "indent": ["error", 4],
        "no-unused-vars": "warn",
        "no-console": 0,
        "max-len": 0,
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "all",
                "singleQuote": true,
                "printWidth": 80
            }
        ]
    }
}
