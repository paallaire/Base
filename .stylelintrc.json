{
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
        "stylelint-scss",
        "stylelint-order"
    ],
    "rules": {
        "order/order": [
            "custom-properties",
            "dollar-variables",
            {
                "type": "at-rule",
                "name": "extend"
            },
            {
                "type": "at-rule",
                "name": "include",
                "hasBlock": false
            },
            "declarations",
            {
                "type": "at-rule",
                "name": "include",
                "parameter": "media",
                "hasBlock": true
            }
        ],
        "order/properties-order": [
            [
                {
                    "emptyLineBefore": "always",
                    "properties": [
                        "padding",
                        "padding-top",
                        "padding-right",
                        "padding-bottom",
                        "padding-left",
                        "color"
                    ]
                },
                {
                    "emptyLineBefore": "always",
                    "properties": [
                        "font-size",
                        "font-weight"
                    ]
                }
            ],
            {
                "unspecified": "bottomAlphabetical"
            }
        ],
        "order/properties-alphabetical-order": null,
        "indentation": [
            4,
            {
                "except": [
                    "value"
                ]
            }
        ],
        "unit-whitelist": [
            "em",
            "rem",
            "%",
            "s",
            "px",
            "vw",
            "vh",
            "deg"
        ],
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": [
                    "/^lost-/"
                ]
            }
        ],
        "block-no-empty": [
            true,
            {
                "severity": "warning"
            }
        ],
        "color-named": [
            "always-where-possible",
            {
                "severity": "warning"
            }
        ],
        "max-nesting-depth": [
            3,
            {
                "severity": "warning"
            }
        ],
        "selector-pseudo-element-colon-notation": "single",
        "selector-no-vendor-prefix": [
            true,
            {
                "severity": "warning",
                "ignoreProperties": [
                    "-webkit-text-size-adjust"
                ]
            }
        ],
        "selector-no-qualifying-type": [
            true,
            {
                "ignore": [
                    "attribute",
                    "class"
                ]
            }
        ],
        "property-no-vendor-prefix": [
            true,
            {
                "severity": "warning"
            }
        ],
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "@lost",
                    "lost"
                ]
            }
        ],
        "scss/at-mixin-pattern" : null,
        "scss/at-import-no-partial-leading-underscore" : null,
        "selector-list-comma-newline-after": null
    }
}